@page "/catalog/list"
@model MyApp.AuctionList.AuctionListModel
@using Microsoft.AspNetCore.Mvc.RazorPages
@using Microsoft.Extensions.Http
@using System.Net.Http
@using System.Net.Http.Json

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <title>Varekatalog</title>
    <style>
        table {
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid blue;
        }
        .box {
            display: flex;
            align-items: center;
        }
        .center {
            display: flex;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div style="width: 800px; margin: auto">
        <div class="box">
            <h1>Live Auktioner</h1>
        </div>
        <hr />
        @if (Model.Auction == null)
        {
            <table>
                <thead>
                    <tr>
                        <th>Produkt Id</th>
                        <th>Navn</th>
                        <th>Beskrivelse</th>
                        <th>Kategori</th>
                        <th>Slutpris</th>
                        <th>Nuvarande Bud</th>
                        <th>Mærke</th>
                        <th>Model</th>
                        <th>Stand</th>
                        <th>Vurdering</th>
                        <th>Udgivelsesdato</th>
                        <th>Udløbsdato</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td class="text-truncate">@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Category</td>
                            <td>@item.FinalPrice</td>
                            <td>@item.CurrentBid</td>
                            <td>@item.Brand</td>
                            <td>@item.Model</td>
                            <td>@item.Condition</td>
                            <td>@item.Valuation</td>
                            <td>@item.ReleaseDate.ToString("dd-MM-yyyy")</td>
                            <td>@item.ExpiryDate.ToString("dd-MM-yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        <hr />
    </div>
</body>
</html>
